@model List<ResultServiceDTO>

<section id="why-us" class="why-us section light-background">

	<div class="container">

		<div class="row gy-4">

			<div class="col-lg-4" data-aos="fade-up" data-aos-delay="100">
				<div class="why-box">
					<h3>Neden Yummy Seçilmeli ?</h3>
					<p>
						Yummy’de her tabak, taze malzemelerin özenle seçildiği ve ustalıkla hazırlandığı bir lezzet yolculuğudur.
						Modern sunumumuz, samimi atmosferimiz ve güleryüzlü ekibimizle yemek yemeyi keyifli bir deneyime dönüştürüyoruz.
					</p>
					<div class="text-center">
						<a href="#" class="more-btn"><span>Daha Fazla</span> <i class="bi bi-chevron-right"></i></a>
					</div>
				</div>
			</div><!-- End Why Box -->

			<div class="col-lg-8 d-flex align-items-stretch">
				<div class="row gy-4" data-aos="fade-up" data-aos-delay="200">

					@foreach (var item in Model)
					{
						<div class="col-xl-4">
							<div class="icon-box d-flex flex-column justify-content-center align-items-center">
								<i class="@item.IconURL"></i>
								<h4>@item.Title</h4>
								<p>
									@item.Description
								</p>
							</div>
						</div>

					}

					
				</div>
			</div>

		</div>

	</div>

</section>